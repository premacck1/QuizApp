<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:minHeight="150dp"
        android:maxHeight="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_theme_default"
        android:padding="10dp" />

<!--    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice">-->

        <CheckedTextView
            android:id="@+id/checked_choice_button1"
            style="@style/AppTheme.OptionsTextStyle"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:checkMark="@drawable/checked_button_checked"
            android:checked="false"
            android:text="Option 1" />
        <CheckedTextView
            android:id="@+id/checked_choice_button2"
            style="@style/AppTheme.OptionsTextStyle"
            android:layout_below="@+id/checked_choice_button1"
            android:layout_centerHorizontal="true"
            android:text="Option 2"
            android:checked="false" />
        <CheckedTextView
            android:id="@+id/checked_choice_button3"
            style="@style/AppTheme.OptionsTextStyle"
            android:layout_below="@+id/checked_choice_button2"
            android:layout_centerHorizontal="true"
            android:checkMark="@drawable/checked_button_checked"
            android:text="Option 3"
            android:checked="false" />
        <CheckedTextView
            android:id="@+id/checked_choice_button4"
            style="@style/AppTheme.OptionsTextStyle"
            android:layout_below="@+id/checked_choice_button3"
            android:layout_centerHorizontal="true"
            android:text="Option 4"
            android:checked="false" />
<!--
    </ListView>-->

    <!--<include layout="@layout/checked_choice"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/include"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />-->

    <ImageButton
        android:id="@+id/fabPrevious"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_previous"
        android:background="@drawable/fab_theme"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/fabNext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:src="@drawable/logo_next"
        android:background="@drawable/fab_theme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>