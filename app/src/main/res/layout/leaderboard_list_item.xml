<?xml version="1.0" encoding="utf-8"?>
    <com.balysv.materialripple.MaterialRippleLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:mrl_rippleColor="@color/colorPrimaryTranslucent"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleRoundedCorners="2dp">

        <RelativeLayout
            android:id="@+id/leaderboard_list_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bookmark_card_theme"
            tools:ignore="UselessParent">

            <com.prembros.programming.quizapp.CustomTextViewSemiLight
                android:id="@+id/leaderboard_header_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="#616161"
                android:gravity="center" />

<!--            <com.prembros.programming.quizapp.CustomTextViewLight
                android:id="@+id/leaderboard_child_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="#616161"
                android:gravity="end"
                android:layout_below="@+id/leaderboard_header_textView"/>-->

        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>